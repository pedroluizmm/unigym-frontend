{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx", // <- React 17+ JSX
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "baseUrl": "src", // agora baseUrl aponta para src
    "paths": {
      "@/*": [
        "*"
      ]
    }
  },
  "include": [
    "src", // todo o seu cÃ³digo
    "vite-env.d.ts" // inclui o typings do Vite
  ]
}